<head><link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <h1>List of Cats</h1>
  
  <ul class="cat-list">
    <% cats.forEach((cat, index) => { %>
      <li>
        <a href="/cats/<%= cat._id %>"><%= cat.name %></a>
      </li>
      <% if ((index + 1) % 2 === 0) { %>
        <br> <!-- Break after every two cats -->
        <% } %>
        <% }) %>
      </ul>
      <div class="link-container">
      <a href="/">Home</a>
      <a href="/cats/new">Add a New Cat</a>
    </div>
  </body>
