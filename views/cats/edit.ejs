<head><link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <div class="edit-form">
    <h1>Edit <%= cat.name %></h1>
    <form action="/cats/<%= cat._id %>?_method=PUT" method="POST">
      <div class="checkbox-container">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= cat.name %>" required>
      </div>
  
      <div class="checkbox-container">
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="<%= cat.age %>" required>
      </div>
  
      <div class="checkbox-container">
        <label for="breed">Breed:</label>
        <input type="text" id="breed" name="breed" value="<%= cat.breed %>" required>
      </div>
  
      <div class="checkbox-container">
        <label for="isAdopted">Adopted:</label>
        <input type="checkbox" id="isAdopted" name="isAdopted" <%= cat.isAdopted ? "checked" : "" %>>
      </div>
  
      <div class="link-container">
        <a href="/">Home</a>
        <button type="submit">Submit Changes</button>
      </div>
    </form>
  </div>
</body>
