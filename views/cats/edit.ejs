<body>
  <h1>Edit <%= cat.name %></h1>

  <form action="/cats/<%= cat._id %>?_method=PUT" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= cat.name %>" />

    <label for="age">Age:</label>
    <input type="number" name="age" id="age" value="<%= cat.age %>" />

    <label for="breed">Breed:</label>
    <input type="text" name="breed" id="breed" value="<%= cat.breed %>" />

    <label for="isAdopted">Adopted?</label>
    <input
      type="checkbox"
      name="isAdopted"
      id="isAdopted"
      <% if(cat.isAdopted){%>
    checked
    <% } %> />

    <button type="submit">Update Cat</button>
  </form>

  <a href="/cats">Back to Cats</a>
</body>
